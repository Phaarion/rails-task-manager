<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed?%>
    <p> [x]<%= link_to task.title, task_path(task) %></p>
  <% else %>
    <p> [ ]<%= link_to task.title, task_path(task) %></p>
  <% end %>
<%= link_to 'Edit', edit_path(task) %>
<%= link_to 'Destroy', delete_path(task), method: :delete,  icon: "user"  %>
<% end %>
<br>
<br>
<p> <%= link_to 'Add a new task', tasks_new_path(@task) %></p>

